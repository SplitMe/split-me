<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.timothy.splitup">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.app.timothy.splitup.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.timothy.splitup.NewSplit"
            android:label="@string/title_activity_new_split"
            android:parentActivityName="com.app.timothy.splitup.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.app.timothy.splitup.MainActivity" />
        </activity>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.app.timothy.splitup.RegistrationActivity"
            android:label="Registration"
            android:parentActivityName="com.app.timothy.splitup.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.app.timothy.splitup.LoginActivity" />
        </activity>
        <activity
            android:name="com.app.timothy.splitup.LoginActivity"
            android:label="Login"
            android:parentActivityName="com.app.timothy.splitup.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.app.timothy.splitup.MainActivity" />
        </activity>
        <activity
            android:name="com.app.timothy.splitup.NewGroup"
            android:label="New Group"
            android:parentActivityName="com.app.timothy.splitup.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.app.timothy.splitup.MainActivity" />
        </activity>
    </application>

</manifest>
